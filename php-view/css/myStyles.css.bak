/* myStyles */
*{
	color: black;
}
html{
	margin: 0;
	padding: 0;
/*	background-image: url("../img/bg.jpeg");
	background-size: 400px;
	background-attachment: fixed;
*/
	background-color: rgb(0, 20, 50);
}
body{
	display: none;
	margin: 0;
	padding: 0;
}
a{
	color: white;
	text-decoration: none;
}
pre{
	word-wrap: break-word;
	white-space: pre-wrap;
}
code{
	font-size: 14px;
	font-family: Consolas, Monaco, monospace;
}
.myfoot{
	position: fixed;
	display: block;
	right: 0;
	bottom: 0;
	width: 120px;
	font-size: 18px;
	background-color: rgba(200,100,50,0.8);
	border-top-left-radius: 20px;
	text-align: center;
	z-index: 999;
}
.mynav{
	transition: height ease-in 0.3s;
	position: fixed;
	top: 0px;
	left: 0px;
	height: 60px;
	background-color: rgba(200,100,50,0.8);
	box-shadow: 0 0 10px black;
	border-bottom-right-radius: 60px;
	width: 60px; /*600px;*/
	z-index: 999;
}
.mynav ul, .mynav li{
	list-style: none;
	margin: 0;
	padding: 0;
}
@keyframes menuundisplay{
	from{
		opacity: 1;
	}to{
		opacity: 0;
	}
}
@keyframes menudisplay{
	from{
		opacity: 0;
	}to{
		opacity: 1;
	}
}
.mynav:hover .mymenubar{
	animation: menudisplay 0.3s;
	opacity: 1;
	display: block;
}
.mynav:hover{
	height: 240px;
	transition: height ease-in 0.2s;
}
.mynavicon{
	position: absolute;
	width: 60px;
	height: 62px;
	bottom: 1px;
	left: 0px;
}
.mymenubar{
	animation: menuundisplay 0.3s;
	opacity: 0;
	display: none;
	position: fixed;
	top: 0;
	left: 0;
	height: 180px;
	width: 60px;
	padding: 0;
	margin: 0;
}
.mymenuli{
	height: 59px;
	border-bottom: 1px solid white;
	width: 100%;
	margin: 0 auto;
	padding: 0;
	text-align: center;
}
.mymenuli:hover{
	background-color: rgb(150,80,50);
}
.mymenu{
	height: 42px;
	width: 60px;
	margin: 0 auto;
	padding-top: 18px;
	font-size: 16px;
	display: inline-block;
}
.line{
	display: block;
	border-bottom: 1px solid #888;
	height: 1;
}
.loclink{
	color: blue;
	text-decoration: underline;
}
.mycontent{
	display: block;
	width: calc(100% - 40px);
	font-size: 16px;
	margin: 20px 20px 20px 20px;
	word-wrap:break-word; overflow:hidden;
	font-family: monospace, Consolas, Monaco;
}
.mycontent *{
	font-family: monospace, Consolas, Monaco;
}
.mycontent a{
	color: blue;
	text-decoration: underline;
}
.mycontent ul{
	list-style-type: circle;
	list-style-position: outside;
	padding-left: 18px;
}
.mycontent p{
	margin: 5px 0;
	padding: 0;
}
.mybox{
	width: 80%;
	margin: 20px auto;
	position: relative;
/*	padding: 20px;*/
	background-color: rgba(255,255,230,0.6);
	border-top-left-radius: 80px;
	/* border-bottom-right-radius: 80px; */
	border-top: 15px solid rgba(200,100,50,0.8);
	box-shadow: 0 0 10px black;
}
.mytitle{
	color: black;
	width: 100%;
	display: block;
	margin-bottom: 20px;
	font-size: 30px;
	height: 40px;
	text-align: center;
	font-weight: bold;
}
.myblog{
	top: 0;
	right: 0;
	width: 100%;
}
